<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hahmonluonti"
    tools:context=".ModifyFigureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#f9dea2"
            android:text="Nimi" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_head_to_left"
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="70dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="60dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="50dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginBottom="40dp"
                android:src="@drawable/nuoli_icon" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="117dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/layout_left">

            <ImageView
                android:id="@+id/imageview_male_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ukko_paa" />

            <ImageView
                android:id="@+id/imageview_male_torso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ukko_torso"/>
            <ImageView
                android:id="@+id/imageview_male_legs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ukko_alaosa"/>

            <ImageView
                android:id="@+id/imageview_male_feet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ukko_jalat"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="85dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_head_to_right"
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="70dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="60dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:layout_marginBottom="50dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="24dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:layout_marginBottom="40dp"
                android:src="@drawable/nuoli_icon" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sukupuoli_mies"
            android:layout_marginLeft="5dp"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:button="@null"
            android:background="@drawable/sukupuoli_man" />


        <Button
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sukupuoli_mies"
            android:text="Done" />

        <RadioButton
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:button="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/sukupuoli_akka"

            />

    </RelativeLayout>

</LinearLayout>