<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hahmonluonti"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ModifyFigureFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Nimi"
        android:textColor="#f9dea2" />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <ImageButton
            android:id="@+id/button_head_to_left"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_toLeftOf="@id/imageview_male_head"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon"
            android:layout_marginTop="50dp"/>

        <ImageButton
            android:id="@+id/button_torso_to_left"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_toLeftOf="@id/imageview_male_head"
            android:layout_marginTop="120dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon" />

        <ImageButton
            android:id="@+id/button_legs_to_left"
            android:layout_toLeftOf="@id/imageview_male_head"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_marginTop="210dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon" />

        <ImageButton
            android:id="@+id/button_shoes_to_left"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_marginTop="280dp"
            android:layout_toLeftOf="@id/imageview_male_head"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon" />


        <ImageView
            android:id="@+id/imageview_male_head"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/tw"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ukko_paa_0" />

        <ImageView
            android:id="@+id/imageview_male_torso"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/tw"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ukko_torso_0" />

        <ImageView
            android:id="@+id/imageview_male_legs"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/tw"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ukko_alaosa_0" />

        <ImageView
            android:id="@+id/imageview_male_feet"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/tw"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ukko_jalat_0" />


        <ImageButton
            android:id="@+id/button_head_to_right"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_toRightOf="@id/imageview_male_feet"
            android:background="@null"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon"
            android:layout_marginTop="50dp"/>


        <ImageButton
            android:id="@+id/button_torso_to_right"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/imageview_male_feet"
            android:background="@null"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon" />

        <ImageButton
            android:id="@+id/button_legs_to_right"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_toRightOf="@id/imageview_male_feet"
            android:background="@null"
            android:layout_marginTop="210dp"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon" />

        <ImageButton
            android:id="@+id/button_shoes_to_right"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_marginTop="280dp"
            android:layout_toRightOf="@id/imageview_male_feet"
            android:background="@null"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/nuoli_icon" />

        <TextView
            android:id="@+id/tw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="62dp" />


    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/test_navigation">


        <RadioButton
            android:id="@+id/button_male"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/sukupuoli_ukko"
            android:button="@null" />


        <Button
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <RadioButton
            android:id="@+id/button_female"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/sukupuoli_akka"
            android:button="@null"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/test_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</LinearLayout>