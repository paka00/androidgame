<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModifyFigureFragment">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nimi" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_head_to_left"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="70dp"
                android:background="@null"
                android:id="@+id/btn_nuoli"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginBottom="60dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginBottom="50dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />
        </LinearLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_male_head"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleY="1.1"
                android:src="@drawable/mies_paa_0" />

            <ImageView
                android:id="@+id/imageview_male_torso"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleX="1.1"
                android:scaleY="1.03"
                android:src="@drawable/mies_torso_0"
                app:layout_constraintTop_toBottomOf="@id/imageview_male_head" />

            <ImageView
                android:id="@+id/imageview_male_legs"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="-10dp"
                android:scaleX="1.46"
                android:scaleY="1.46"
                android:src="@drawable/ukko_alaosa"
                app:layout_constraintTop_toBottomOf="@id/imageview_male_torso" />

            <ImageView
                android:id="@+id/imageview_male_feet"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:scaleX="0.298"
                android:scaleY="0.28"
                android:src="@drawable/ukko_jalat"
                app:layout_constraintTop_toBottomOf="@id/imageview_male_legs" />

            <Button
                android:id="@+id/done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Done" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_head_to_right"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="70dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginBottom="60dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginBottom="50dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:background="@null"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/nuoli_icon" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>