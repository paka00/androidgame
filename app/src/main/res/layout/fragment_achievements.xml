<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AchievementsFragment">


    <android.support.constraint.Guideline
        android:id="@+id/horGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/horGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />


    <android.support.constraint.ConstraintLayout
        android:background="@drawable/tausta_achievements"
        app:layout_constraintBottom_toTopOf="@id/horGuideline1"
        android:id="@+id/clayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="80dp">

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#07000000"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#07000000"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/distanceline"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/box"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@+id/distanceline"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/monsterline"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@+id/distanceline"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/gift"
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:layout_constraintBottom_toTopOf="@+id/box"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/monsterImage"
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:layout_constraintBottom_toTopOf="@+id/box"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/characterLine"
            android:layout_width="7dp"
            android:layout_height="20dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@+id/distanceline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <View
            android:id="@+id/characterLine2"
            android:layout_width="7dp"
            android:layout_height="28dp"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@+id/distanceline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/characterLine2"
            />

        <TextView
            android:id="@+id/distancecharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distanceline" />

        <Button
            android:id="@+id/moveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/distancecharacter"/>

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/horGuideline1"
        app:layout_constraintBottom_toTopOf="@id/horGuideline2"
        android:layout_width="match_parent"
        android:layout_height="0dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBottomNavigationBarChecked"
        app:layout_constraintTop_toBottomOf="@id/horGuideline1">

        <TextView
            android:id="@+id/steps"
            android:layout_width="270dp"
            android:layout_height="85dp"
            android:layout_gravity="left"
            android:text="test"
            android:textColor="#000"
            android:textSize="25dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/userdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="test"
            android:textColor="#000"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/steps"
            android:visibility="visible" />

        <TextView
            android:id="@+id/test"
            app:layout_constraintTop_toBottomOf="@id/userdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:textSize="500dp"/>


        <ListView
            android:id="@+id/listview_achievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/test">
        </ListView>

    </android.support.constraint.ConstraintLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>