<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tekstiboxi_1">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07"
        android:id="@+id/verGuideline1"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93"
        android:id="@+id/verGuideline2"/>

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MORO"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pixel_font"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_description"
        app:layout_constraintLeft_toLeftOf="@id/verGuideline1"
        app:layout_constraintLeft_toRightOf="@id/verGuideline2"/>

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JEES"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pixel_font"
        app:layout_constraintTop_toBottomOf="@id/text_view_name"
        app:layout_constraintBottom_toTopOf="@id/text_view_percent"
        app:layout_constraintLeft_toLeftOf="@id/verGuideline1"
        app:layout_constraintLeft_toRightOf="@id/verGuideline2"/>

    <TextView
        android:id="@+id/text_view_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pixel_font"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/verGuideline1"
        app:layout_constraintLeft_toRightOf="@id/verGuideline2"/>

</android.support.constraint.ConstraintLayout>