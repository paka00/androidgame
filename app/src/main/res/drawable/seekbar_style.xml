<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:angle="180"
                android:endColor="@color/colorSeekbarBackground"
                android:startColor="@color/colorSeekbarBackground"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <corners android:radius="10dp"/>
                <gradient
                    android:angle="180"
                    android:startColor="@color/colorSeekbarSelected"
                    android:endColor="@color/colorSeekbarSelected"/>
            </shape>
        </clip>
    </item>

</layer-list>